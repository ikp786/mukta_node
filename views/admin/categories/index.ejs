<%- include('../partials/header') %>
    <%- include('../partials/sidebar') %>

        <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
            <!-- Navbar -->
            <%- include('../partials/navbar') %>

                <!-- End Navbar -->
                <div class="container-fluid py-4">
                    <style>
                        body {
                            height: 100vh;
                        }
                    </style>
                    <div class="card-header">
                        <h5>Category
                            <a href="/admin/categories/create" class="btn btn-sm btn-primary float-right">Create</a>
                        </h5>
                    </div>
                    <div class="card-body pt-0">
                        <div class="table-responsive">
                            <table class="table align-items-center mb-0 data-table " id="myTable">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-dark text-xxs font-weight-bolder">SR. No.</th>
                                        <th class="text-uppercase text-dark text-xxs font-weight-bolder">title</th>
                                        <th><strong>Action</strong></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% var cnt=1; %>
                                        <% categories.forEach(value=> { %>
                                            <tr>
                                                <td>
                                                    <%= cnt; %>

                                                </td>
                                                <td>
                                                    <%= value.title %>
                                                </td>
                                                <td>
                                                    <div class="d-flex">
                                                        <a class="btn btn-primary shadow btn-xs sharp me-1"
                                                            href="/admin/categories/edit/<%= value._id %>"><i
                                                                class="fas fa-pencil-alt"></i></a>
                                                        <a class="btn btn-primary shadow btn-xs sharp me-1"
                                                            onclick="return confirm('Are you sure you want to delete this Product?')"
                                                            href="/admin/categories/destroy/<%= value._id %>"><i
                                                                class="fas fa-trash-alt"></i></a>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% cnt++; }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <%- include('../partials/footer') %>
                </div>
        </main>
        <%- include('../partials/script') %>
            <script>

            </script>