<%- include('../partials/header') %>
    <%- include('../partials/sidebar') %>

        <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
            <!-- Navbar -->
            <%- include('../partials/navbar') %>

                <!-- End Navbar -->
                <div class="container-fluid py-4">
                    <style>
                        body {
                            height: 100vh;
                        }
                    </style>
                    <div class="card-header">
                        <h5>Product
                            <a href="/admin/products/create" class="btn btn-sm btn-primary float-right">Create</a>
                        </h5>
                    </div>                    
                    <div class="card-body pt-0">                        
                        <div class="table-responsive">
                            <table class="table align-items-center mb-0 data-table " id="myTable">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-dark text-xxs font-weight-bolder">SR. No.</th>
                                        <th class="text-uppercase text-dark text-xxs font-weight-bolder">Image</th>
                                        <th class="text-uppercase text-dark text-xxs font-weight-bolder">Name</th>
                                        <th class="text-uppercase text-dark text-xxs font-weight-bolder">Price</th>
                                        <th class="text-uppercase text-dark text-xxs font-weight-bolder">Discount Price</th>
                                        <th class="text-uppercase text-dark text-xxs font-weight-bolder">Description</th>
                                        <th><strong>Action</strong></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% var cnt=1; %>
                                        <% products.forEach(value=> { %>
                                            <tr>
                                                <td>
                                                    <%= cnt %>
                                                </td>
                                               
                                                <td>
                                                    <img src="<%= value.image %>" class="avatar lg rounded me-2" alt="profile-image">                                                    
                                                </td>
                                                <td>
                                                    <%= value.name %>
                                                </td>
                                                <td>
                                                    <%= '₹'+ value.price %>
                                                </td>
                                                <td>
                                                    <%= '₹'+ value.discount_price %>
                                                </td>
                                                <td title="<%= value.description %>">
                                                    <%= value.description.substring(0, 50) %>
                                                </td>

                                                <td>
                                                    <div class="d-flex">
                                                        <a class="btn btn-primary shadow btn-xs sharp me-1"
                                                            href="/admin/products/edit/<%= value._id %>"><i
                                                                class="fas fa-pencil-alt"></i></a>
                                                                <a class="btn btn-primary shadow btn-xs sharp me-1" onclick="return confirm('Are you sure you want to delete this Category?')"
                                                            href="/admin/products/destroy/<%= value._id %>"><i
                                                                class="fas fa-trash-alt"></i></a>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% cnt++; }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <%- include('../partials/footer') %>
                </div>
        </main>
        <%- include('../partials/script') %>
           <script>

           </script>